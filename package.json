{
  "name": "@shravya-kasturi/add",
  "version": "1.0.0",
  "description": "Simple add package to add two numbers. Very helpful",
  "main": "dist/index.js",
  "files": [
    "dist/**.*"
  ],
  "scripts": {
    "build": "rm -rf output && tsc && rollup -c rollup.config.js",
    "test": "jest",
    "postbuild": "cp package.json output",
    "semantic-release": "semantic-release",
    "check-format": "prettier --config .prettierrc '.' --check",
    "lint": "eslint src/**/**",
    "format": "prettier --config .prettierrc '.' --write"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "tag": "latest",
    "@shravya-kasturi:registry": "https://npm.pkg.github.com"
  },
  "release": {
    "getLastRelease": "last-release-git",
    "branches": [
      "main"
    ],
    "debug": true,
    "repositoryUrl": "git://github.com/shravya-kasturi/add.git",
    "pkgRoot": "output",
    "files": [
      "dist/**.*"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "breaking",
              "release": "major"
            },
            {
              "type": "refactor",
              "scope": "core-*",
              "release": "minor"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "output",
          "files": [
            "dist/**.*"
          ],
          "tarballDir": "output"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/shravya-kasturi/add.git",
    "directory": "dist"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-angular": "^12.1.4",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "conventional-changelog-eslint": "^3.0.9",
    "eslint": "^7.29.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "last-release-git": "0.0.3",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.8",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.3",
    "semantic-release": "^17.4.4",
    "ts-jest": "^27.0.3",
    "typescript": "^3.9.10"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
